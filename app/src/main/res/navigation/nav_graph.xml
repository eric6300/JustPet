<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
        app:startDestination="@id/homeFragment">

    <fragment
            android:id="@+id/homeFragment"
            android:name="com.taiwan.justvet.justpet.home.HomeFragment"
            android:label="HomeFragment" />
    <fragment
            android:id="@+id/calendarFragment"
            android:name="com.taiwan.justvet.justpet.calendar.CalendarFragment"
            android:label="CalendarFragment" />
    <fragment
            android:id="@+id/toolFragment"
            android:name="com.taiwan.justvet.justpet.tool.ToolFragment"
            android:label="ToolFragment" />
    <fragment
            android:id="@+id/chartFragment"
            android:name="com.taiwan.justvet.justpet.chart.ChartFragment"
            android:label="ChartFragment" />
    <dialog
            android:id="@+id/achievementDialog"
            android:name="com.taiwan.justvet.justpet.achievement.AchievementDialog"
            android:label="AchievementDialog" />

    <action android:id="@+id/navigate_to_homeFragment" app:destination="@id/homeFragment" />
    <action android:id="@+id/navigate_to_calendarFragment" app:destination="@id/calendarFragment" />
    <action android:id="@+id/navigate_to_toolFragment" app:destination="@id/toolFragment" />
    <action android:id="@+id/navigate_to_chartFragment" app:destination="@id/chartFragment" />
    <action android:id="@+id/navigate_to_achievementDialog" app:destination="@id/achievementDialog" />
    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.taiwan.justvet.justpet.event.EditEventFragment"
        android:label="EventDetailFragment" >
        <argument
            android:name="petEvent"
            app:argType="com.taiwan.justvet.justpet.data.PetEvent" />
    </fragment>
    <dialog
        android:id="@+id/tagDialog"
        android:name="com.taiwan.justvet.justpet.tag.TagDialog"
        android:label="TagDialog" >
        <action
            android:id="@+id/action_tagDialog_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </dialog>
    <action android:id="@+id/navigate_to_tagDialog" app:destination="@id/tagDialog" />

</navigation>